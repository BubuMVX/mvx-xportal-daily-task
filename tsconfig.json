{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["es6"],
        "declaration": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
